<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinationLayout"
    >

    <android.support.design.widget.AppBarLayout

        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:focusableInTouchMode="true"
        >

        <android.support.design.widget.CollapsingToolbarLayout

            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:expandedTitleMarginEnd="47dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">



            <ImageView
                android:id="@+id/imgTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                app:layout_collapseMode="pin"
                app:srcCompat="@drawable/background_material"
                />



            <android.support.v7.widget.Toolbar

                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView

        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        >

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >


          <android.support.v7.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/cardInf"
              android:layout_alignParentEnd="true"
              android:layout_alignParentStart="true"
              android:layout_marginTop="30dp"
              android:layout_alignTop="@+id/txtTitle"
              android:padding="10dp"

              >

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  >

              <ImageView
                  android:id="@+id/imgCover"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="16dp"
                  android:minHeight="121dp"
                  app:srcCompat="@drawable/android_black"
                  app:layout_anchorGravity="bottom|left|end"

                  />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@+id/imgCover"
                    android:layout_alignParentRight="true"
                    >

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Sviluppatore:"
                      android:textSize="20dp"
                      android:gravity="center"
                      android:layout_marginTop="20dp"
                      android:id="@+id/txtDevelopper"
                   />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="ciaoone"
                      android:id="@+id/txtDevelopperDisplay"
                      />


                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Produttore:"
                      android:textSize="20dp"
                      android:id="@+id/txtPublisher"
                      android:layout_centerVertical="true"
                      />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="txtPublisher"
                      android:id="@+id/textPublisherDisplay"
                      />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prezzo"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="prezzo"
                        android:id="@+id/txtPrice"
                        />

                </LinearLayout>

              </RelativeLayout>

          </android.support.v7.widget.CardView>

          <android.support.v7.widget.CardView
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:layout_marginTop="30dp"
              android:id="@+id/cardPlot"
              android:layout_below="@+id/cardInf"
              android:layout_alignStart="@+id/cardInf"

              >

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:padding="20dp"
                  >

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:orientation="vertical"
                      >

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Trama"
                          android:textSize="30dp"
                          android:layout_gravity="center"
                          android:textStyle="bold"
                          android:layout_marginBottom="5dp"

                          />
                      <TextView
                      android:id="@+id/plot"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="TextView"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentEnd="true"
                      android:layout_marginEnd="15dp">

                     </TextView>

                  </LinearLayout>

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="2dp"
                      android:background="@color/colorPrimaryDark"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="10dp"
                      />

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      >

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Valuazione"
                          android:layout_gravity="center"
                          android:textSize="30dp"
                          android:textStyle="bold"
                          android:layout_marginBottom="5dp"
                          />

                      <RatingBar
                      android:id="@+id/ratingBar"
                      android:layout_width="wrap_content"
                      android:layout_height="40dp"
                      android:numStars="5"
                      android:rating="2.0"
                      android:stepSize="0.5"
                      android:layout_below="@+id/plot"
                      android:layout_alignParentStart="true"
                      android:layout_alignEnd="@+id/plot" />

                  </LinearLayout>
