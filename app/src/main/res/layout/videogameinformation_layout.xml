<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinationLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout

        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:focusableInTouchMode="true">

        <android.support.design.widget.CollapsingToolbarLayout

            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:expandedTitleMarginEnd="47dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <ImageView
                android:id="@+id/imgTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                app:layout_collapseMode="pin"
                app:srcCompat="@drawable/background_material" />


            <android.support.v7.widget.Toolbar

                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView

        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                android:id="@+id/cardInf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/txtTitle"
                android:layout_marginTop="30dp"
                android:padding="10dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgCover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:minHeight="121dp"
                        app:layout_anchorGravity="bottom|left|end"
                        app:srcCompat="@drawable/android_black"

                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toEndOf="@+id/imgCover"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtDevelopper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="Sviluppatore:"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/txtDevelopperDisplay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ciaoone" />


                        <TextView
                            android:id="@+id/txtPublisher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Produttore:"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/textPublisherDisplay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="txtPublisher" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prezzo"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/txtPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="prezzo" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardPlot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/cardInf"
                android:layout_below="@+id/cardInf"
                android:layout_marginTop="30dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:text="Trama"
                            android:textSize="30dp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/plot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="15dp"
                            android:text="TextView">

                        </TextView>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimaryDark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:text="Valuazione"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:text="Valutazione community"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:id="@+id/numOfReview"
                            android:text="0 recensioni"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            />

                        <RatingBar
                            android:id="@+id/ratingBarCommunity"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignEnd="@+id/plot"
                            android:layout_marginBottom="5dp"
                            android:scaleY="0.7"
                            android:scaleX="0.7"
                            android:isIndicator="true"
                            android:layout_gravity="center"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/plot"
                            android:numStars="5"
                            android:stepSize="0.5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:text="La tua valutazione"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <RatingBar
                            android:id="@+id/ratingBarUser"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignEnd="@+id/plot"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/plot"
                            android:layout_gravity="center"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:numStars="5"
                            android:rating="0.0"
                            android:stepSize="0.5"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:text="Trailer"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <com.google.android.youtube.player.YouTubePlayerView
                            android:id="@+id/youtubeView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </com.google.android.youtube.player.YouTubePlayerView>

                    </LinearLayout>
