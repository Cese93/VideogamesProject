<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgConsole"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/txtNameConsole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imgConsole"
        android:text="Name console"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDeveloperConsole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgConsole"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/imgConsole"
        android:text="Developer" />

    <TextView
        android:id="@+id/txtPriceConsole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtDeveloperConsole"
        android:layout_alignBottom="@+id/txtDeveloperConsole"
        android:layout_marginStart="300dp"
        android:text="Price"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

</RelativeLayout>