<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/android_black"
        android:id="@+id/imageProductCart"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NameProduct"
        android:id="@+id/txtTitle"


        android:layout_alignBottom="@+id/imageProductCart"
        android:layout_toEndOf="@+id/imageProductCart"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="25dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quantity"
        android:layout_alignBaseline="@+id/txtTitle"
        android:layout_alignBottom="@+id/txtTitle"
        android:layout_toEndOf="@+id/txtTitle"
        android:layout_marginStart="46dp"
        android:id="@+id/txtQuantity" />

</RelativeLayout>